{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "ES2020.BigInt",
      "ES2020.String"
    ],
    "module": "CommonJS",
    "target": "ES2019",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "src/__mocks__",
    "**/tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
